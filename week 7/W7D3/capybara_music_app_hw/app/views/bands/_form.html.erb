<% action = (band.persisted? ? band_url(band) : bands_url) %>
<% method = (band.persisted? ? :patch : :post) %>

<form action="<%= action %>" method="post">
    <%= auth_token %>
    <input type="hidden" name="_method" method="<%= method %>">

    <label for="name">Name</label>
    <input type="text" id="name" name="band[name]">

    <br/>
    <br/>

    <% submit_text = (band.persisted? ? 'Update' : 'Create') + ' band!' %>
    <input type="submit" value="<%= submit_text %>" >
</form>